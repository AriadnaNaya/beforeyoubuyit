					<img src="<%=juego.background_image %>" alt="Imagen civ">
				</div>
				<div class="overview-data">
					<h4 class="product-title"><%= juego.name %></h4>
					<p>Developers: Firaxis Games, Aspyr, Aspyr (Mac)</p>
					<p>Fecha de Lanzamiento: <%= juego.released %></p>
					<div class="my-2">
						<% for (var i=0; i< juego.tags.length; i++) { %>
							<span class="badge badge-secondary"><%= juego.tags[i].name %></span>
						<% } %>
					</div>

					<div class="row">
						<div class="btn-group">
							<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
								aria-haspopup="true" aria-expanded="false">
								Plataforma
							</button>
							<div class="price">
								<h6>ARS$ <strong>1.200,00</strong></h6>
							</div>
							<div class="dropdown-menu">
								<% for (var j=0; j< juego.stores.length; j++) { %>
									<% if ( juego.stores[j].store.slug === 'steam') { %>
										<a class="dropdown-item" href="javascript:void(0)"><i class="icon-steam"></i> Steam</a>
									<% } %>
									<% if ( juego.stores[j].store.slug === 'epic-games') { %>
										<a class="dropdown-item" href="javascript:void(0)"><i class="icon-epic"></i> Epic Games</a>
									<% } %>
									<% if ( juego.stores[j].store.slug === 'gog') { %>
										<a class="dropdown-item" href="javascript:void(0)"><i class="icon-gog"></i> GOG</a>
									<% } %>
									<% if ( juego.stores[j].store.slug === 'xbox-store') { %>
										<a class="dropdown-item" href="javascript:void(0)"><i class="icon-xbox"></i> X-Box Store</a>
									<% } %>
								<% } %>
							</div>
						</div>
						<form method="GET" action="carrito" class="btn-group">
							<button type="button" class="btn btn-success"><i class="material-icons">vertical_align_bottom</i> Demo</button>
							<button type="submit" class="btn btn-primary"><i class="material-icons">shopping_cart</i> Comprar</button>
						</form>


					</div>
				</div>
			</div>
			<!-- //gameInfo -->
		</div>
	</div>
